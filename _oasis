Name: Core-R
Version: 0.1
Synopsis: A library for analyzing the R programming language.
Authors: Ross Mawhorter and Anton Xue
License: LGPL with OCaml linking exception
Description: R programming language analysis framework.
OASISFormat: 0.3
BuildTools: ocamlbuild
Plugins: META (0.4), DevFiles (0.4)

Executable "main"
  Path: src
  MainIs: main.ml
  BuildDepends: language, interpreter, loader, native_calls

Library "interpreter"
  Path: src/interpreter
  Modules: Rules, Interputils, Engine
  BuildDepends: language, natives

Library "language"
  Path: src/language
  Modules: Syntax, Support, Annotations, Natives, Langutils

Library "parser"
  Path: src/parser
  Modules: Parser, Rast

Executable "absyn_generator"
  Path: src/parser
  MainIs: absyn_generator.ml
  BuildDepends: parser

Library "natives"
  Path: src/interpreter/natives
  Modules: Constants, Copy, Vector, Coerce, Subscript, Native_calls
  BuildDepends: language

Library "loader"
  Path: src/preprocess
  Modules: Loader, Rast_to_language, Injections
  Modules: Loader, Rast_to_language
  BuildDepends: language, parser

