Name: Core-R
Version: 0.1
Synopsis: A library for analyzing the R programming language.
Authors: Ross Mawhorter and Anton Xue
License: LGPL with OCaml linking exception
Description: R programming language analysis framework.
OASISFormat: 0.3
BuildTools: ocamlbuild
Plugins: META (0.4), DevFiles (0.4)

Executable "main"
  Path: src
  MainIs: main.ml
  BuildDepends: language, interpreter, loader, natives

Library "interpreter"
  Path: src/interpreter
  Modules: Constants, Natives, Rules, Copy, Interputils, Engine
  BuildDepends: language

Library "language"
  Path: src/language
  Modules: Syntax, Support, Annotations, Langutils

Library "parser"
  Path: src/parser
  Modules: Parser, Rast

Executable "absyn_generator"
  Path: src/parser
  MainIs: absyn_generator.ml
  BuildDepends: parser

Library "natives"
  Path: src/interpreter/natives
  Modules: Coerce, Subscript, Vector
  BuildDepends: language, interpreter

Library "loader"
  Path: src/preprocess
  Modules: Loader, Rast_to_language
  BuildDepends: language, support, absyn_generator, parser

