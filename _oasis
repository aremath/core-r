Name: Core-R
Version: 0.1
Synopsis: A library for analyzing the R programming language.
Authors: Ross Mawhorter and Anton Xue
License: LGPL with OCaml linking exception
Description: R programming language analysis framework.
OASISFormat: 0.3
BuildTools: ocamlbuild, ocamlfind
Plugins: META (0.4), DevFiles (0.4)

Executable "main"
  Path: src
  MainIs: main.ml
  BuildDepends: language, interpreter, loader, natives, smt

Library "interpreter"
  Path: src/interpreter
  Modules: Rules, Interputils, Engine
  BuildDepends: language, natives, loader

Library "language"
  Path: src/language
  Modules: Syntax, Support, Annotations, Langutils, Smtsyntax, Smttrans

Library "parser"
  Path: src/parser
  Modules: Parser, Rast

Executable "absyn_generator"
  Path: src/parser
  MainIs: absyn_generator.ml
  BuildDepends: parser

Library "natives"
  Path: src/natives
  Modules: Natives, Constants, Copy, Vector, Native_support, Subscript,
           Native_calls, Arithmetic
  BuildDepends: language

Library "loader"
  Path: src/preprocess
  Modules: Loader, Rast_to_language
  BuildDepends: language, parser, natives

Library "smt"
  Path: src/smt
  Modules: Smt2, Smt
  BuildDepends: language

Library "ounit"
  Path: test/ounit
  Modules: OUnit, OUnitTypes, OUnitUtils, OUnitLogger, OUnitChooser
  BuildDepends: unix

Executable "testytesty"
  Path: test
  MainIs: test.ml
  BuildDepends: interpreter, language, parser, natives, loader, ounit

Test "testytesty"
  TestTools: testytesty
  Command: $testytesty
  WorkingDirectory: test

